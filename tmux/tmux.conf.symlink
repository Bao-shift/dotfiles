# -----------------------------------------
# SETUP
# -----------------------------------------

# Fix pbcopy and pbpaste
set-option -g default-command "reattach-to-user-namespace -l zsh"

# 256 color support
set -g default-terminal "screen-256color"

# Base index for windows and panes
set -g base-index 1
set -g pane-base-index 1

# Reset escape time
set -sg escape-time 1

# Renumber windows (1,2,3 -> kill 2 -> 1,2 instead of 1,3)
set-option -g renumber-windows on

# -----------------------------------------
# COLORS
# -----------------------------------------
set -g status-justify centre
set -g message-fg white
set -g message-bg black
set -g status-fg white
set -g status-bg colour235
set -g status-left-fg green
set -g status-left-bg colour235
set -g status-right-fg green
set -g status-right-bg colour235
set -g status-left " #S:#I:#P"
set -g status-right "#(date +'%a %d/%m/%Y %R') "
set -g status-left-length 30
set -g pane-border-fg white
set -g pane-border-bg default
set -g pane-active-border-fg green
set -g pane-active-border-bg default

# -----------------------------------------
# MOUSE
# -----------------------------------------
set-option -g mouse-select-pane on
set-option -g mouse-select-window on
set-option -g mouse-resize-pane on
setw -g mode-mouse on

# -----------------------------------------
# KEYS
# -----------------------------------------

# Remap global <prefix>
set -g prefix C-a
bind C-a send-prefix
unbind C-b

# Panes
bind-key v split-window -h
bind-key s split-window

bind h select-pane -L
bind j select-pane -D
bind k select-pane -U
bind l select-pane -R

bind-key ^j resize-pane -D 5
bind-key ^k resize-pane -U 5
bind-key ^h resize-pane -L 5
bind-key ^l resize-pane -R 5

# Copy&Paste
unbind p
bind p paste-buffer
bind y run "tmux save-buffer - | reattach-to-user-namespace pbcopy"

# Send input to every pane
bind-key a set-window-option synchronize-panes

# Reload tmux config
bind r source-file "$HOME/.tmux.conf"  \; display-message "Config reloadedâ€¦"

# Smart pane switching with awareness of vim splits
is_vim='echo "#{pane_current_command}" | grep -iqE "(^|\/)g?(view|n?vim?)(diff)?$"'
bind -n C-h if-shell "$is_vim" "send-keys C-h" "select-pane -L"
bind -n C-j if-shell "$is_vim" "send-keys C-j" "select-pane -D"
bind -n C-k if-shell "$is_vim" "send-keys C-k" "select-pane -U"
bind -n C-l if-shell "$is_vim" "send-keys C-l" "select-pane -R"
bind -n C-\ if-shell "$is_vim" "send-keys C-\\" "select-pane -l"
