# vim: ft=zsh

##############################################################################
# Change the variables after liking and move the file to ~/.timrc.           #
#                                                                            #
# Below are the default settings Tim uses when nothing is set in ~/.timrc.   #
# Tim looks for audio in ~/.tim and $PWD/audio_files (Tim's directory).      #
#                                                                            #
# On GNU/Linux Tim uses "aplay -q" instead of "afplay" by default.           #
##############################################################################

# The command that executes when the normal countdown mode ends.
if (($+commands[osascript])); then
	timer_cmd="osascript -e 'display notification \"Time is gone. Beep beep beep!\" with title \"Timer\"'"
else
	timer_cmd="afplay ~/.dotfiles/tim/TimTimer/audio_files/alarm.wav"
fi

# Set this to 1 if you want the command above to loop endlessly.
timer_repeat_cmd=0

# The default time (in minutes) for the interval mode.
interval=15

# The command that executes when the work period starts.
if (($+commands[osascript])); then
	timer_cmd="osascript -e 'display notification \"Start working now\" with title \"Timer\"'"
else
	work_cmd="afplay ~/.dotfiles/tim/TimTimer/audio_files/work.wav"
fi

# The command that executes when the break period starts.
if (($+commands[osascript])); then
	timer_cmd="osascript -e 'display notification \"Take a break, you deserve it!\" with title \"Timer\"'"
else
	break_cmd="afplay ~/.dotfiles/tim/TimTimer/audio_files/break.wav"
fi

# The command that executes when the pomodoro session is completed.
if (($+commands[osascript])); then
	timer_cmd="osascript -e 'display notification \"Session complete, relax now!\" with title \"Timer\"'"
else
	pomodoro_cmd="afplay ~/.dotfiles/tim/TimTimer/audio_files/alarm.wav"
fi

# Set this to 1 if you want the command above to loop endlessly.
pomodoro_repeat_cmd=0

# The default time (in minutes) for the work period under pomodoro mode.
pomodoro_work=25

# The default time (in minutes) for the break period under pomodoro mode.
pomodoro_break=5

# How many times work and break mode should run before pomodoro mode ends.
pomodoro_stop=4
